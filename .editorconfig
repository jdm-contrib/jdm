# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.svg]
indent_size = 1

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
